<idea-plugin>
    <id>com.github.clementhvt.phpstormprestashopplugin</id>
    <name>PrestaShop</name>
    <vendor email="clem.hervouet@live.fr" url="https://github.com/clement-hvt">Clément H</vendor>

    <description><![CDATA[
    Plugin pour gérer le préfixe de base de données PrestaShop (_DB_PREFIX_).
    ]]></description>

    <!-- Déclare la dépendance au module PHP -->
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.clementhvt.phpstormprestashopplugin.PrestashopStartupActivity"/>
        <applicationService
                serviceImplementation="com.github.clementhvt.phpstormprestashopplugin.PrestashopSettingsState"/>
        <applicationConfigurable
                parentId="language"
                instance="com.github.clementhvt.phpstormprestashopplugin.PrestashopConfigurable"
                id="com.github.clementhvt.phpstormprestashopplugin.PrestashopConfigurable"
                displayName="Prestashop"/>
        <lang.documentationProvider
                implementationClass="com.github.clementhvt.phpstormprestashopplugin.DbPrefixDocumentationProvider"
                language="PHP"
                order="first"/>
        <multiHostInjector implementation="com.github.clementhvt.phpstormprestashopplugin.SqlInjector.ObjectModelTableDefinitionSqlInjector"/>
        <multiHostInjector implementation="com.github.clementhvt.phpstormprestashopplugin.SqlInjector.ConfigurationValueSqlInjector"/>
        <gotoDeclarationHandler implementation="com.github.clementhvt.phpstormprestashopplugin.CoreClassGotoHandler"/>
        <codeInsight.lineMarkerProvider language="PHP" implementationClass="com.github.clementhvt.phpstormprestashopplugin.PrestashopOverrideLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="PHP" implementationClass="com.github.clementhvt.phpstormprestashopplugin.PrestashopCQRSHandlerLineMarkerProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider4 implementation="com.github.clementhvt.phpstormprestashopplugin.TypeProvider.DbPrefixConstantTypeProvider"/>
        <libraryRoot id="prestashop-meta" path="/prestashop-meta/" runtime="false"/>
    </extensions>
</idea-plugin>